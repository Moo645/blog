<%= form_with model: notebook do |f| %>
  <div class="field">
    <% if notebook.errors.any? %>
      <div id="error_explanation" class="field">
        <ul>
          <% notebook.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
  <div class="field">
    <%= f.label :name, "筆記本名稱", class: 'label' %>
    <div class="control">
      <%= f.text_field :name, class: 'input is-primary' %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.button submit, class: "button is-link" %>
    </div>
  </div>
<% end %>
